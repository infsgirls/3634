<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.davev.assignmentdraft">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity
            android:name=".AdvancedActivity1"
            android:label="@string/title_activity_advanced1"
            android:theme="@style/ThemeExpert" />
        <activity
            android:name=".IntermediateActivity1"
            android:label="@string/title_activity_intermediate1"
            android:theme="@style/ThemeMed" />
        <activity
            android:name=".AdvancedActivity2"
            android:label="@string/title_activity_advanced2"
            android:theme="@style/ThemeExpert" />
        <activity
            android:name=".IntermediateActivity2"
            android:label="@string/title_activity_intermediate2"
            android:theme="@style/ThemeMed" />
        <activity
            android:name=".BeginnersActivity1"
            android:label="@string/title_activity_beginners1"
            android:theme="@style/ThemeBegin" />
        <activity
            android:name=".BeginnersActivity2"
            android:label="@string/title_activity_beginners2"
            android:theme="@style/ThemeBegin" />
        <activity
            android:name=".QuizActivity1"
            android:label="@string/title_activity_quiz1"
            android:theme="@style/ThemeQuiz" />
        <activity
            android:name=".BegginersAPIpage"
            android:label="@string/title_activity_begginers_apipage"
            android:theme="@style/ThemeBegin" />
        <activity
            android:name=".IntermediateAPIpage"
            android:label="@string/title_activity_intermediate_apipage"
            android:theme="@style/ThemeMed" />
        <activity
            android:name=".AdvancedAPIpage"
            android:label="@string/title_activity_advanced_apipage"
            android:theme="@style/ThemeExpert" />
        <activity android:name=".Dashboard" />
        <activity android:name=".Spellchecker"></activity>
    </application>

</manifest>